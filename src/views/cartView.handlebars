<script src="/js/cart.js"></script>
<div>
    <h1>Bienvenido al carrito!</h1>
    <div id="goToProducts">
        <script>
            let link = document.createElement('a');

            // Set the href attribute
            link.href = `/`;

            // Set the link text
            link.innerText = 'Go back to shopping';

            // Appends the element to "goToCart" id. In this case, a div acting as a container
            let container = document.getElementById('goToProducts');
            container.appendChild(link);
        </script>
    </div>
    {{#if items}}
    <button onclick="clearCart()">Clear Cart</button>
    <div style="display: flex; flex-wrap: wrap; justify-content: space-evenly;">
        {{#each items}}
        <div style="display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: rgb(0, 0, 0);
    margin-top: 3%;
    background-color: rgb(201, 195, 195);
    width: 15%;
    border-radius: 10px;
    text-align: center;
    padding-bottom: 1%;
    margin-right: 3%;">
            <div>
                <h5 onclick="deleteFromCart(`{{this.productId._id}}`)">X</h5>
                <h1>
                    {{this.productId.title}}
                </h1>
                <h2>
                    ${{this.productId.price}}
                </h2>
                <h2>Stock: {{this.productId.stock}}</h2>
                <h2>
                    <input type="number" min="1" max={{this.productId.stock}} value="{{this.quantity}}" id="quantity_input_cart_{{this.productId._id}}" oninput="handleInput(`{{this.productId._id}}`)">
                </h2>
                <h2>
                    Category: {{this.productId.category}}
                </h2>
            </div>
        </div>
        {{/each}}
    </div>
    <div>
        <div class="purchaseContainer" style="display: flex;">
    <div>
        <h3>Final price: <span id="total_price">${{totalPrice}}</span></h3>
    </div>
</div>
        <button onclick="finishPurchase()">Purchase</button>
    </div>
    {{else}}
    Your cart is empty!
    {{/if}}